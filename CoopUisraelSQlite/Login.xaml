<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CoopUisraelSQlite.Login">
    <ScrollView>
        <StackLayout Padding="30" Spacing="30">
            <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png"></Image>
            <Entry Placeholder="Introduce tu usuario" Keyboard="Email" x:Name="usuario"/>
            <Entry Placeholder="Introduce tu contraseña" IsPassword="True" x:Name="contra"/>

            <Button x:Name="btn_login" Text="Iniciar sesion" BackgroundColor="DarkCyan" TextColor="White"
                    Clicked="btn_login_Clicked"/>
            <Button x:Name="btn_registrar" Text="Registrar" Clicked="btn_registrar_Clicked"/>
        </StackLayout>
    </ScrollView>
</ContentPage>